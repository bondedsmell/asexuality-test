    <script>
        // 选项点击逻辑：选中时高亮，记录分数
        const options = document.querySelectorAll('.option');
        options.forEach(option => {
            option.addEventListener('click', () => {
                // 取消同一题的其他选项选中状态
                const siblings = option.parentElement.querySelectorAll('.option');
                siblings.forEach(sib => sib.classList.remove('selected'));
                // 选中当前选项
                option.classList.add('selected');
            });
        });

        // 提交按钮逻辑：计算分数并显示结果
        document.getElementById('submit').addEventListener('click', () => {
            let totalScore = 0; // 总分
            let part1Score = 0; // 1-10题得分（性吸引+稳定性）
            let q11Score = 0;   // 第11题得分
            let q12Score = 0;   // 第12题得分
            let q13Score = 0;   // 第13题得分
            let q15Score = 0;   // 第15题得分
            let q14Score = 0;   // 第14题得分

            // 遍历所有题目，收集分数
            const questions = document.querySelectorAll('.question');
            questions.forEach((question, index) => {
                const selectedOption = question.querySelector('.option.selected');
                if (!selectedOption) {
                    alert(`请完成第${index+1}题再提交哦~`);
                    return; // 未完成题目时终止
                }
                const score = parseInt(selectedOption.dataset.score);
                totalScore += score;

                // 记录关键题得分
                if (index < 10) { // 1-10题（索引0-9）
                    part1Score += score;
                }
                if (index === 10) q11Score = score; // 第11题（索引10）
                if (index === 11) q12Score = score; // 第12题（索引11）
                if (index === 12) q13Score = score; // 第13题（索引12）
                if (index === 13) q14Score = score; // 第14题（索引13）
                if (index === 14) q15Score = score; // 第15题（索引14）
            });

            // 匹配结果（和Excel逻辑一致）
            let resultType = '';
            let resultDesc = '';

            if (totalScore >= 35 && part1Score >= 25 && (q11Score >= 2 || q13Score >= 2)) {
                resultType = '纯无性恋（Asexual）';
                resultDesc = '你大概率属于纯无性恋（Ace），对他人完全缺乏稳定的性吸引，性并非你情感生活的必要部分。你可能有或没有浪漫倾向，但核心是“性吸引的缺失”稳定且无痛苦感，这是无性恋光谱的典型表现。';
            } else if (totalScore >= 32 && part1Score >= 23 && (q11Score + q12Score) >= 5) {
                resultType = '无浪漫倾向无性恋（Aro-Ace）';
                resultDesc = '你大概率属于无浪漫倾向无性恋（Aro-Ace），既缺乏性吸引，也没有建立浪漫关系的渴望。独处或非浪漫的情感联结（亲情、友情）已能满足你的情感需求，这是无性恋光谱中完全自洽的一种状态。';
            } else if (totalScore >= 25 && totalScore <= 34 && part1Score >= 18 && q15Score >= 1) {
                resultType = '灰色无性恋（Graysexual）';
                resultDesc = '你大概率属于灰色无性恋（Gray-A），对他人的性吸引极其微弱、罕见或短暂，大部分时间保持无性恋核心特征。偶尔可能在特定条件下产生微弱性好奇，但不会转化为实际需求，这是无性恋光谱中常见的中间状态。';
            } else if (totalScore >= 20 && totalScore <= 32 && part1Score >= 16 && q14Score >= 2 && q15Score >= 2) {
                resultType = '半无性恋（Demisexual）';
                resultDesc = '你大概率属于半无性恋（Demi），性吸引的产生必须以深厚情感联结为前提，无情感基础时对任何人都无性别吸引。你可能有浪漫倾向，但性吸引的“触发条件”是核心特征，属于无性恋光谱的重要分支。';
            } else if (totalScore >= 20 && totalScore <= 34 && part1Score >= 17 && q13Score >= 2 && q11Score <= 1) {
                resultType = '有浪漫倾向无性恋（Romantic Asexual）';
                resultDesc = '你大概率属于有浪漫倾向无性恋，缺乏性吸引但渴望建立浪漫关系（恋爱、陪伴）。你的亲密关系核心是精神契合，性并非必要组成，这种状态完全符合无性恋光谱的定义，无需因“想恋爱”而怀疑自身取向。';
            } else if (totalScore >= 5 && totalScore <= 19) {
                resultType = '中性倾向，需进一步观察';
                resultDesc = '你的体验介于多种类型之间，无需急于贴标签。建议以1年为周期持续观察，重点关注“性吸引是否稳定”，自我接纳比分类更重要。';
            } else {
                resultType = '暂不倾向无性恋光谱';
                resultDesc = '你的体验较少符合无性恋核心特征，可能是暂时未遇到引发性吸引的对象，或属于其他性取向。建议结合自身情感体验进一步探索，无需强行关联无性恋标签。';
            }

            // 显示结果
            document.getElementById('resultText').innerHTML = `<p><strong>细分类型参考：${resultType}</strong></p><p>${resultDesc}</p>`;
            document.getElementById('result').style.display = 'block';
            // 滚动到结果区域
            document.getElementById('result').scrollIntoView({ behavior: 'smooth' });
        });
    </script>
</body>
